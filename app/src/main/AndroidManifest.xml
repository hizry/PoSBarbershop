<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akarvisi.barbercamp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductsActivity"
            android:label="@string/title_activity_products"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProductFormActivity"
            android:label="@string/title_activity_product_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmployeeFormActivity"
            android:label="@string/title_activity_employee_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmployeesActivity"
            android:label="@string/title_activity_employees"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>